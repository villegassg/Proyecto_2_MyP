<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.SearchResultsController">
   <top>
      <MenuBar prefHeight="28.0" prefWidth="800.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Help" />
          <Menu mnemonicParsing="false" text="About us" />
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <AnchorPane prefHeight="45.0" prefWidth="554.0" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane layoutX="307.0" prefHeight="45.0" prefWidth="187.0">
               <children>
                  <Button fx:id="backButton" layoutX="14.0" layoutY="10.0" mnemonicParsing="false" onAction="#back" prefWidth="75.0" text="Back" />
                  <Button fx:id="viewButton" disable="true" layoutX="100.0" layoutY="10.0" mnemonicParsing="false" onAction="#viewBook" prefWidth="75.0" style="-fx-background-color: #76bad6;" text="View Book" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <TableView fx:id="table" prefHeight="526.0" prefWidth="800.0" BorderPane.alignment="CENTER">
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name">
            <cellValueFactory>
              <PropertyValueFactory property="name" />
            </cellValueFactory>
          </TableColumn>
          <TableColumn fx:id="authorColumn" prefWidth="197.0" text="Author">
            <cellValueFactory>
              <PropertyValueFactory property="author" />
            </cellValueFactory>
          </TableColumn>
            <TableColumn fx:id="editorialColumn" prefWidth="202.0" text="Editorial">
            <cellValueFactory>
              <PropertyValueFactory property="editorial" />
            </cellValueFactory>
          </TableColumn>
            <TableColumn fx:id="categoryColumn" prefWidth="200.0" text="Category">
            <cellValueFactory>
              <PropertyValueFactory property="category" />
            </cellValueFactory>
          </TableColumn>
        </columns>
        <sortOrder>
          <fx:reference source="nameColumn" />
        </sortOrder>
      </TableView>
   </center>
</BorderPane>
